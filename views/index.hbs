<div class="limiter">
			<div class="container-login100">
				<div class="wrap-login100 pb-5">
					<form class="login100-form " id="submit-form" method="post" accept="/login" >
						<span class="login100-form-title p-b-26 mb-4">
							Welcome
						</span>
						<span class="login100-form-title p-b-48">
							<i class="zmdi zmdi-font"></i>
						</span>
	
						<div class="wrap-input100 " >
							<input class="input100" placeholder="Email" type="email" name="email">
						</div>
	
						<div class="wrap-input100">
							
							<input class="input100" placeholder="Password" type="password" name="pass">
						</div>
	
						<div class="log-bt-area text-center">
							
							<button class="login-bt">Login</button>
	
						</div>
					</form>
					{{#if loginErr}}
					<p class="text-danger err text-center">invalid Email or Password</p>
					{{/if}}
					<p id="username-error"></p>
				{{!-- <h1 class="text-danger text-center pt-5 fs-6">Wrongg password</h1> --}}
				</div>
						
			</div>
			
		</div>