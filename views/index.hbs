<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 pb-5">
			<form class="login100-form " id="login-form" method="post" accept="/login">
				<span class="login100-form-title p-b-26 mb-4">
					Welcome
				</span>
				<span class="login100-form-title p-b-48">
					<i class="zmdi zmdi-font"></i>
				</span>

				<div class="wrap-input100 ">
					<input class="input100" placeholder="Email" type="email" name="email">
				</div>

				<div class="wrap-input100">

					<input class="input100" placeholder="Password" type="password" name="pass">
				</div>

				<div class="log-bt-area text-center">

					<button class="login-bt">Login</button>

				</div>
			</form>
			<p id="username-error"></p>
			<h1 class=" text-center fs-6"><a class="text-dark" href="/signup">Don't have an account</a></h1>
		</div>

	</div>

</div>

{{#if loginErr}}
<div id="myAlert" data-aos="fade-down" class="alert alert-secondary alert-dismissible fade show fs-6 fixed-top alt text-center text-danger"
	role="alert">
	<strong>Uh-oh!</strong> invalid Email or Password.
	<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
{{/if}}